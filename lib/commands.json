{
    "projectCommands" : {
        "compile": {
            "operation": "compile-metadata",
            "payloadFiles": "active"
        },
        "compile-project": {
            "operation": "compile-project",
            "confirm": {
                "message": "Confirm Compile Project",
                "detailedMessage": "Would you like to compile the project?",
                "buttons": ["Yes", "No"]
            }
        },
        "compile-selected-metadata": {
            "operation": "compile-metadata",
            "payloadFiles": "selected"
        },
        "clean-project": {
            "operation": "clean-project",
            "confirm": {
              "message": "Confirm Clean Project",
              "detailedMessage": "Are you sure you want to clean this project? All local (non-server) files will be deleted and your project will be refreshed from the server.",
              "buttons": ["Yes", "No"]
            }
        },
        "index-metadata": {
            "operation": "index-metadata"
        },
        "refresh-selected-metadata": {
            "operation": "refresh-metadata",
            "payloadFiles": "selected",
            "confirm": {
              "message": "Refresh Selected Metadata",
              "detailedMessage": "Are you sure you want to overwrite the selected files' contents from Salesforce?",
              "buttons": ["Yes", "No"]
            }            
        },
        "run-all-tests": {
            "operation": "run-tests"
        },
        "run-tests": {
            "operation": "run-tests",
            "payloadClasses": "activeBaseName"
        },
        "edit-project": {
            "operation": "edit-project",
            "ui": true,
            "url":"project/edit",
            "view" : "tab"
        },
        "new-apex-class": {
            "operation": "new-metadata",
            "ui": true,
            "url":"metadata/new?type=ApexClass",
            "payloadMetadata": "ApexClass"
        },
        "new-apex-trigger": {
            "operation": "new-metadata",
            "ui": true,
            "url":"metadata/new?type=ApexTrigger",
            "payloadMetadata": "ApexTrigger"
        },
        "new-visualforce-page": {
            "operation": "new-metadata",
            "ui": true,
            "url":"metadata/new?type=ApexPage",
            "payloadMetadata": "ApexPage"
        },
        "new-visualforce-component": {
            "operation": "new-metadata",
            "ui": true,
            "url":"metadata/new?type=ApexComponent",
            "payloadMetadata": "ApexComponent"
        },
        "run-apex-unit-tests": {
            "operation": "test",
            "ui": true,
            "url":"test/new",
            "view": "tab"
        },
        "deploy-to-server": {
            "operation": "deploy",
            "url":"deploy/new",
            "ui": true,
            "view": "tab"
        },
        "execute-apex": {
            "operation": "execute-apex",
            "ui": true,
            "view" : "tab"
        },
        "new-project-from-existing-directory": {
            "operation": "new-project-from-existing-directory",
            "ui": true
        },
        "start-logging": {
            "operation": "start-logging"
        },
        "stop-logging": {
            "operation": "stop-logging"
        },
        "refresh-apex-symbols": {
            "operation": "index-apex"
        },
        "get-org-test-coverage": {
            "operation": "get-coverage"
        },
        "visualforce-live-preview": {
            "operation": "open-sfdc-url",
            "payloadFiles": "active",
            "payloadType": "preview"
        }
    }
}
