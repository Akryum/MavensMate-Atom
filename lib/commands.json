{
    "projectCommands" : {
        "compile-file": {
            "operation": "compile-metadata",
            "payloadFiles": "active"
        },
        "refresh-file": {
            "operation": "refresh-metadata",
            "payloadFiles": "active"
        },
        "delete-file": {
            "operation": "delete-metadata",
            "payloadFiles": "active"
        },
        "compile-project": {
            "operation": "compile-project",
            "confirm": {
                "message": "Confirm Compile Project",
                "detailedMessage": "Would you like to compile the project?",
                "buttons": ["Yes", "No"]
            }
        },
        "compile-selected-metadata": {
            "operation": "compile-metadata",
            "payloadFiles": "selected"
        },
        "new-resource-bundle": {
